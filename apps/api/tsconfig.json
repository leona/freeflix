{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "lib": ["esnext", "dom"],
    "types": ["@hono/types", "bun-types", "node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "declaration": false,
    "outDir": "../../dist/apps/api"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
